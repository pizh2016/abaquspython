{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Abaqus python",
            "type": "shell",
            "command": "abaqus",
            "args": ["python","${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Abaqus CAE noGUI",
            "type": "shell",
            "command": "abaqus",
            "args": ["cae","noGUI=${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Abaqus CAE",
            "type": "shell",
            "command": "abaqus",
            "args": ["cae","script=${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}